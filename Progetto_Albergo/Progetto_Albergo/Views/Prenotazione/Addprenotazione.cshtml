@model Progetto_Albergo.Models.Prenotazione

@{
    ViewData["Title"] = "Aggiungi Prenotazione";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="AddPrenotazione">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Data" class="form-label"></label>
                            <input asp-for="Data" class="form-control" type="date" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Numero" class="form-label"></label>
                            <input asp-for="Numero" class="form-control" type="number" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Anno" class="form-label"></label>
                            <input asp-for="Anno" class="form-control" type="number" />
                            <span asp-validation-for="Anno" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Dal" class="form-label"></label>
                            <input asp-for="Dal" class="form-control" type="date" />
                            <span asp-validation-for="Dal" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Al" class="form-label"></label>
                            <input asp-for="Al" class="form-control" type="date" />
                            <span asp-validation-for="Al" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Caparra" class="form-label"></label>
                            <input asp-for="Caparra" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Caparra" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Tariffa" class="form-label"></label>
                            <input asp-for="Tariffa" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Tariffa" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descrizione" class="form-label"></label>
                            <input asp-for="Descrizione" class="form-control" />
                            <span asp-validation-for="Descrizione" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FK_Cliente" class="form-label"></label>
                            <input asp-for="FK_Cliente" class="form-control" type="number" />
                            <span asp-validation-for="FK_Cliente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FK_Camera" class="form-label"></label>
                            <input asp-for="FK_Camera" class="form-control" type="number" />
                            <span asp-validation-for="FK_Camera" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Aggiungi Prenotazione</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Indietro alla Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
