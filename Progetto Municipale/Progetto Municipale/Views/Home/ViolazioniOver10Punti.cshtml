
@{
    ViewData["Title"] = "Violazioni con oltre 10 punti decurtati";
}

<h1>Violazioni con oltre 10 punti decurtati</h1>

<table class="table">
    <thead>
        <tr>
            <th>Importo</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Data di Violazione</th>
            <th>Decurtamento Punti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Importo</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.DataViolazione.ToShortDateString()</td>
                <td>@item.DecurtamentoPunti</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
